.jumbotron.jumbotron-fluid(style='margin-bottom: 0px;')
  .container-fluid
    .mx-auto(style='width: 400px;')
      h1.display-4(style='text-align: center;') Account
br
.container-fluid(style='margin-left: 5%')
  .row
    .movie-portal-view
      #profile_picture.container-fluid
        img.img-fluid(src=temp.ProfilePic)
    #user_info.container(style='margin: unset;')
      p-info Username:
      p-info.username=temp.Username
      br
      br
      p-info Age:
      p-info.age= temp.Age
      br
      br
      p-info Location:
      p-info.location=temp.Location
      br
      br
      p-info Favourite Genres:
      p-info.genre= temp.FavouriteGenre
      br
      br
      p-info Posts:
      p-info.posts= temp.Posts
      br
      br
      p-info User Type: 
      if temp.Type == 0
        p-info Regular User
      else
        p-info Contributing User
      button#notFollowed.button_notFollowed(onclick='follow()' value='Follow') Follow
    .col
      .card.text-white.bg-light.mb-3(style='max-width: 18rem; margin-left:-50%;')
        .card-header(style='color: grey')= temp.Username
        .card-body
          p.card-text(style='color: grey') &quot;Lover of all movies!&quot;
          br
    .container(style='margin:10px;')
      p.p-heading Favourite Movies: 
      .row
        .col-lg-3
          img.img(src='https://m.media-amazon.com/images/M/MV5BZTk2ZmUwYmEtNTcwZS00YmMyLWFkYjMtNTRmZDA3YWExMjc2XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg' width='250' height='310' style='margin-left:auto;margin-right:auto;')
          p.feature-1(style='font-family:Lucida Sans Unicode;font-size:20px;text-align:center;') Jumanji
    .container(style='margin:10px')
      p.p-heading Followers:
      div
        div(class='row')
          .col-lg-3
            img.img-fluid(src=temp.Followers[0].ProfilePic width='250' height='310' style='margin-left:auto;margin-right:auto;')
            p.followers-1(style='font-family:Lucida Sans Unicode;font-size:20px;text-align:center;')=temp.Followers[0].Username
      br
